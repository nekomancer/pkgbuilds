# Maintainer: fsckd <fsckdaemon -at- gmail.com>

pkgname=awbot-git
pkgver=20130119
pkgrel=1
pkgdesc="Arch Linux Women IRC bot"
arch=('any')
url="http://archwomen.org"
license=('AGPL')
depends=('openssl')
makedepends=('git')
backup=('etc/awbot.conf')
source=()
sha256sums=()
conflicts=(awbot)
provides=(awbot)

_gitroot=git://github.com/archwomen/awbot.git
_gitname=awbot

# build() only clones the repo. There is not compiling.
build()
{
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package()
{
  cd "$srcdir/$_gitname-build"
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -D -m644 awbot.conf "$pkgdir"/etc/awbot.conf
}
